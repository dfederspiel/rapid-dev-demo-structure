extends base.pug

mixin feature(className, title, body)
    .feature-wrapper
        .feature-details
            .title(class= className)
                =title
            .text
                =body

block header
    #player
    .header-wrapper
        +cnt
            +row
                +col('col-xs-3')
                   include svg/structure.pug
                +col('col-xs-9')
                    .top-menu
                        a(onclick="Scroll.To('#benefits')") Benefits
                        a(onclick="Scroll.To('#features')") Features
                        a(onclick="Scroll.To('#pricing')") Pricing
                        button.notapill.hidden-xs.hidden-sm.hidden-md GET A DEMO
            +row
                +col('col-md-6 col-md-push-6')
                    .video-link
                +col('col-md-6 col-md-pull-6')
                    h1.
                        Powerful, Yet Simple Firm Management Software for Professional Services Firms
                    p.
                        Firm management software doesn’t have to be complicated. Move away from the overhead of other professional services software with Structure. This easy-to-use platform lets you manage every aspect of your projects, from resource scheduling to client billing.
                    button.notapill.hidden-lg GET A DEMO
